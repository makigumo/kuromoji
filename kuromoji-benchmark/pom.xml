    <name>Kuromoji Benchmark</name>

    <artifactId>kuromoji-benchmark</artifactId>
    <packaging>jar</packaging>

    <properties>
        <kuromoji.wiki.file>jawiki.tsv.gz</kuromoji.wiki.file>
        <kuromoji.wiki.url>http://atilika.com/releases/jawiki/${kuromoji.wiki.file}</kuromoji.wiki.url>
        <kuromoji.wiki.dir>${project.basedir}/jawiki/</kuromoji.wiki.dir>
        <kuromoji.benchmark.count>0</kuromoji.benchmark.count>
        <kuromoji.benchmark.userdictionary>jawikiuserdict.txt</kuromoji.benchmark.userdictionary>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.7</version>
                <executions>
                    <execution>
                        <id>copy-license-resources</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/META-INF</outputDirectory>
                            <resources>
                                <resource>
                                    <!-- Becomes top level directory. Is there a better way to do this? -->
                                    <directory>${project.basedir}/..</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>LICENSE.md</include>
                                        <include>CONTRIBUTORS.md</include>
                                    </includes>
                                </resource>
                                <resource>
                                    <directory>${project.basedir}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>NOTICE.md</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>benchmark-tokenizers</id>
            <activation>
                <property>
                    <name>benchmarkTokenizers</name>
                </property>
            </activation>
